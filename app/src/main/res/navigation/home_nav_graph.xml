<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.arctouch.codechallenge.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/goToMovieDetailFragment"
            app:destination="@id/movieDetailFragment" />
        <action
            android:id="@+id/action_homeFragment_to_search_nav_graph"
            app:destination="@id/search_nav_graph" />
    </fragment>
    <fragment
        android:id="@+id/movieDetailFragment"
        android:name="com.arctouch.codechallenge.detail.MovieDetailFragment"
        android:label="Movie"
        tools:layout="@layout/fragment_movie_detail">
        <argument
            android:name="movie"
            app:argType="com.arctouch.codechallenge.model.Movie" />
    </fragment>
</navigation>